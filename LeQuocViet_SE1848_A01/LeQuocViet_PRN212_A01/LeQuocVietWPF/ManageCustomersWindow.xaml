<Window x:Class="LeQuocVietWPF.ManageCustomersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeQuocVietWPF"
        mc:Ignorable="d"
        Title="ManageCustomersWindow" Height="750" Width="825" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btnCreate" Content="Create" HorizontalAlignment="Left" Margin="224,665,0,0" VerticalAlignment="Top" FontSize="20" Click="btnCreate_Click"/>
        <Label Content="CUSTOMER MANAGERMENT" HorizontalAlignment="Center" Margin="0,4,0,0" VerticalAlignment="Top"/>
        <Label Content="Customer ID" HorizontalAlignment="Left" Margin="18,34,0,0" VerticalAlignment="Top" FontSize="14" />
        <Label Content="Company Name" HorizontalAlignment="Left" Margin="18,65,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Contact Name" HorizontalAlignment="Left" Margin="18,94,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Contact Title" HorizontalAlignment="Left" Margin="18,124,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="18,154,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Phone" HorizontalAlignment="Left" Margin="18,185,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="txtCustomerID" IsReadOnly="True" HorizontalAlignment="Left" Margin="234,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="482" FontSize="14"/>
        <TextBox x:Name="txtCompanyName" HorizontalAlignment="Left" Margin="234,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="482" FontSize="14"/>
        <TextBox x:Name="txtContactName" HorizontalAlignment="Left" Margin="234,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="482" FontSize="14"/>
        <TextBox x:Name="txtContactTitle" HorizontalAlignment="Left" Margin="234,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="482" FontSize="14"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Margin="234,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="482" FontSize="14"/>
        <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Margin="234,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="482" FontSize="14"/>
        <Button x:Name="btnUpdate" Content="Update" HorizontalAlignment="Center" Margin="0,665,0,0" VerticalAlignment="Top" FontSize="20" Click="btnUpdate_Click"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="520,665,0,0" VerticalAlignment="Top" FontSize="20" Click="btnDelete_Click"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" Margin="738,665,0,0" VerticalAlignment="Top" FontSize="20" Click="btnClose_Click"/>
        <ListBox x:Name="lstCustomers"
         Margin="43,289,84,101"
         SelectedValuePath="Id" FontSize="14" SelectionChanged="lstCustomers_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Id}" />
                        <TextBlock Text="{Binding CompanyName}" />
                        <TextBlock Text="{Binding ContactName}" />
                        <TextBlock Text="{Binding ContactTitle}" />
                        <TextBlock Text="{Binding Address}" />
                        <TextBlock Text="{Binding Phone}" />
                        <Separator />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Search Customer Name" HorizontalAlignment="Left" Margin="22,219,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Margin="234,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="482" FontSize="14"/>
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Margin="764,231,0,0" VerticalAlignment="Top" FontSize="14" Click="btnSearch_Click"/>


    </Grid>
</Window>
