<Window x:Class="LeQuocVietWPF.CUCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeQuocVietWPF"
        mc:Ignorable="d"
        Title="CUCustomerWindow" Height="450" Width="800" Loaded="Window_Loaded">

    <!-- THÊM Viewbox ở đây -->
    <Viewbox Stretch="Fill">
        <Grid Background="Aqua" Width="800" Height="450">
            <!-- Toàn bộ nội dung của bạn giữ nguyên trong Grid -->
            <Label Content="Create | Update" HorizontalAlignment="Left" Height="43" Margin="35,10,0,0" VerticalAlignment="Top" Width="190" FontSize="24" FontWeight="Bold"/>
            <Label Content="Customer ID" HorizontalAlignment="Left" Height="29" Margin="35,85,0,0" VerticalAlignment="Top" Width="126" FontSize="16" Background="White"/>
            <Label Content="Company Name" HorizontalAlignment="Left" Height="29" Margin="35,133,0,0" VerticalAlignment="Top" Width="126" FontSize="16" Background="White"/>
            <Label Content="Contact Name" HorizontalAlignment="Left" Height="29" Margin="35,176,0,0" VerticalAlignment="Top" Width="126" FontSize="16" Background="White"/>
            <Label Content="Contact title" HorizontalAlignment="Left" Height="29" Margin="35,217,0,0" VerticalAlignment="Top" Width="126" FontSize="16" Background="White"/>
            <Label Content="Address" HorizontalAlignment="Left" Height="29" Margin="35,261,0,0" VerticalAlignment="Top" Width="126" FontSize="16" Background="White"/>
            <Label Content="Phone" HorizontalAlignment="Left" Height="29" Margin="35,305,0,0" VerticalAlignment="Top" Width="126" FontSize="16" Background="White"/>
            <TextBox x:Name="txtCustomerId" HorizontalAlignment="Center" Margin="0,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="404" Height="23" FontSize="16"/>
            <TextBox x:Name="txtComName" HorizontalAlignment="Center" Margin="0,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="404" Height="23" FontSize="16"/>
            <TextBox x:Name="txtContactName" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="404" FontSize="16" Margin="0,181,0,0"/>
            <TextBox x:Name="txtConTitle" HorizontalAlignment="Center" Margin="0,223,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="404" Height="23" FontSize="16"/>
            <TextBox x:Name="txtAddress"  HorizontalAlignment="Center" Margin="0,264,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="404" Height="23" FontSize="16"/>
            <TextBox x:Name="txtPhone" HorizontalAlignment="Center" Margin="0,312,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="404" Height="22" FontSize="16"/>
            <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Height="74" Margin="641,88,0,0" VerticalAlignment="Top" Width="109" FontSize="24" Click="btnSave_Click" Background="#FF0069FF" Foreground="#FFFCFCFC" FontWeight="Bold" />
            <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Height="74" Margin="641,197,0,0" VerticalAlignment="Top" Width="109" FontSize="20" Click="btnExit_Click" Background="#FFFF5959" FontWeight="Bold" Foreground="#FFFBFAFA"/>
        </Grid>
    </Viewbox>
</Window>
