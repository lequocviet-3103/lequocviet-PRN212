<Window x:Class="LeQuocVietWPF.PersonalProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PersonalProfileWindow" Height="495" Width="800" Loaded="Window_Loaded"
        Background="Aqua">
    <Viewbox Stretch="Fill">
        <Grid Background="Aqua" Height="417" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Label Content="Employee ID" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtEmployeeId" IsReadOnly="True" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"/>

            <Label Content="Name" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtName" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>

            <Label Content="UserName" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtUsername" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>

            <Label Content="Password" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPassword" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"/>

            <Label Content="JobTitle" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtJob" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"/>

            <Label Content="BirthDate" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
            <DatePicker x:Name="txtBirth" Grid.Row="5"  Grid.Column="1" VerticalAlignment="Center" />

            <Label Content="HireDate" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
            <DatePicker x:Name="txtHire" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center"/>

            <Label Content="Address" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtAddress" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center"/>

            <Button x:Name="btnSave" Content="Save" Grid.Row="8" Grid.Column="1" Width="99" Height="35" HorizontalAlignment="Left" Margin="31,30,0,-5" Click="btnSave_Click" Background="White" FontSize="20" FontWeight="Bold"/>
            <Button x:Name="btnExit" Content="Exit" Grid.Row="8" Grid.Column="1" Width="100" Height="35" HorizontalAlignment="Left" Margin="249,30,100,-5" Click="btnExit_Click" Background="White" FontSize="20" FontWeight="Bold"/>
        </Grid>
    </Viewbox>
</Window>
