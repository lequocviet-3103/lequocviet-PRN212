            <Button x:Name="btnReport" Content="Reports" HorizontalAlignment="Left" Height="40" Margin="40,316,0,0" VerticalAlignment="Top" Width="490" FontSize="20" Click="btnReport_Click" Background="White" FontWeight="Bold"/>

            <Label Content="Manage" HorizontalAlignment="Left" Margin="225,16,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold"/>

        </Grid>
    </Viewbox>
</Window>
