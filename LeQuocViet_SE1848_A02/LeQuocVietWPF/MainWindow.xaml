        xmlns:local="clr-namespace:LeQuocVietWPF"
        mc:Ignorable="d"
        Title="MainWindow" >
    <Viewbox Stretch="Fill">
        <Grid Background="Aqua" Height="462" Width="578">

            <Button x:Name="btnManagecustomers"  Content="Manage customers" HorizontalAlignment="Left" Height="40" Margin="40,91,0,0" VerticalAlignment="Top" Width="490" FontSize="20" Click="btnManagecustomers_Click" Background="White" FontWeight="Bold"/>
            <Button x:Name="btnManageproducts" Content="Manage products" HorizontalAlignment="Left" Height="40" Margin="40,144,0,0" VerticalAlignment="Top" Width="490" FontSize="20" Click="btnManageproducts_Click" Background="White" FontWeight="Bold"/>
