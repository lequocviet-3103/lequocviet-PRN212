<Window x:Class="LeQuocVietWPF.PersonalProfileCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeQuocVietWPF"
        mc:Ignorable="d"
        Title="PersonalProfileCustomerWindow" Height="433" Width="800" Loaded="Window_Loaded"
        Background="Aqua">
    <Viewbox Stretch="Fill">
        <Grid Background="Aqua">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Label Content="Customer ID" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtCustomerId" IsReadOnly="True" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"/>

            <Label Content="Company Name" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtCompanyName" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>

            <Label Content="Contact Name" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtContactName" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>

            <Label Content="Contact title" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtContactTitle" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"/>

            <Label Content="Address" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtAddress" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"/>

            <Label Content="Phone" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPhone" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"/>

            <Button x:Name="btnSave" Content="Save" Grid.Row="6" Grid.Column="1" Width="100" Height="35" HorizontalAlignment="Left" Margin="65,15,0,10" Click="btnSave_Click" Background="White" FontWeight="Bold" FontSize="18"/>
            <Button x:Name="btnExit" Content="Exit" Grid.Row="6" Grid.Column="1" Width="100" Height="35" HorizontalAlignment="Left" Margin="271,15,80,10" Click="btnExit_Click" Background="#FFFF5555" FontSize="18" FontWeight="Bold" Foreground="White"/>
        </Grid>
    </Viewbox>
</Window>
