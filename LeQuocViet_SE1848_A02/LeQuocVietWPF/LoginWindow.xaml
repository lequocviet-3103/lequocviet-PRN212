<Window x:Class="LeQuocVietWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeQuocVietWPF"
        mc:Ignorable="d"
        Title="LoginWindow" >
    <Viewbox Stretch="Fill">
        <Grid Background="Aqua" Width="641" Height="318">
            <Label Content="UserName/Phone" HorizontalAlignment="Left" Margin="16,100,0,0" VerticalAlignment="Top" FontSize="20"/>
            <Label Content="Password" HorizontalAlignment="Left" Margin="16,152,0,0" VerticalAlignment="Top" FontSize="20" Width="166"/>
            <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="196,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" FontSize="20"/>
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="196,156,0,0" VerticalAlignment="Top" Width="400" FontSize="20"/>
            <Label Content="Login Employee And Customer" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Margin="0,10,0,0"/>
            <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="143,231,0,0" VerticalAlignment="Top" Height="41" Width="121" FontSize="20" Click="btnLogin_Click" Background="White" FontWeight="Bold"/>
            <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="383,231,0,0" VerticalAlignment="Top" Height="41" Width="115" FontSize="20" Click="btnCancel_Click" Foreground="White" Background="#FFFF4C4C" FontWeight="Bold"/>

        </Grid>
    </Viewbox>
</Window>
