<Window x:Class="WpfApp_EF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_EF"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="450" Width="800">
    <Grid>
        <Label Content="Đăng nhập hệ thống" HorizontalAlignment="Center" Margin="0,38,0,0" VerticalAlignment="Top" Width="310"/>
        <Label Content="Email Address" HorizontalAlignment="Left" Margin="97,122,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="178">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="1.058"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="Password" HorizontalAlignment="Left" Margin="101,172,0,0" VerticalAlignment="Top" Width="99"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="306,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="362"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="306,190,0,0" VerticalAlignment="Top" Width="362" RenderTransformOrigin="0.5,0.5">
            <PasswordBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.007"/>
                    <TranslateTransform/>
                </TransformGroup>
            </PasswordBox.RenderTransform>
        </PasswordBox>
        <Button x:Name="btnDangNhap" Content="Đăng nhập" HorizontalAlignment="Left" Margin="180,288,0,0" VerticalAlignment="Top" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Thoát" HorizontalAlignment="Left" Margin="400,298,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
