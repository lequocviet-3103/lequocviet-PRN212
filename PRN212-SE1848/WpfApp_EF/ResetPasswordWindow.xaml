<Window x:Class="WpfApp_EF.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_EF"
        mc:Ignorable="d"
        Title="ResetPasswordWindow" Height="450" Width="800">
    <Grid Background="#FF00E7FF">
        <Label Content="Email Address" HorizontalAlignment="Left" Height="34" Margin="49,90,0,0" VerticalAlignment="Top" Width="168" FontSize="20"/>
        <Label Content="Reset Password" HorizontalAlignment="Center" Height="53" Margin="0,20,0,0" VerticalAlignment="Top" Width="264" FontSize="24"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="34" Margin="49,148,0,0" VerticalAlignment="Top" Width="168" FontSize="20"/>
        <Label Content="Confirm Password" HorizontalAlignment="Left" Height="34" Margin="49,0,0,0" VerticalAlignment="Center" Width="168" FontSize="20"/>
        <Button x:Name="btnReset" Content="Reset" HorizontalAlignment="Left" Height="60" Margin="172,292,0,0" VerticalAlignment="Top" Width="172" FontSize="22" Background="#FF1DFF00"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Height="60" Margin="442,292,0,0" VerticalAlignment="Top" Width="172" FontSize="22" Background="Red"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="34" Margin="258,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="376" FontSize="20"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="42" Margin="258,144,0,0" VerticalAlignment="Top" Width="376"/>
        <PasswordBox x:Name="txtConfirmPassword" HorizontalAlignment="Left" Height="43" Margin="258,200,0,0" VerticalAlignment="Top" Width="376"/>

    </Grid>
</Window>
