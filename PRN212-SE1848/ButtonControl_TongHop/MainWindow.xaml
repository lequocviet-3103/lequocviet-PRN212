<Window x:Class="ButtonControl_TongHop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonControl_TongHop"
        mc:Ignorable="d"
        Title="Tổng 2 số" Height="320" Width="340" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Hệ số a:" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Hệ số b:" HorizontalAlignment="Left" Margin="15,80,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Kết quả: " HorizontalAlignment="Left" Margin="15,149,0,0" VerticalAlignment="Top" FontSize="20" />
        <TextBox x:Name="txtA" HorizontalAlignment="Left" Margin="15,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302" FontSize="20"/>
        <TextBox x:Name="txtB" HorizontalAlignment="Left" Margin="15,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302" FontSize="20"/>
        <TextBox x:Name="tbKetqua" HorizontalAlignment="Left" Margin="15,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302" FontSize="20" Background="Yellow"/>

        <Button x:Name="BtnTong" Height="50" Click="BtnTong_Click" Margin="30,229,200,0" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Image/sum.png" Width="24" Height="24" Margin="0,0,8,0"/>
                <TextBlock Text="Tổng" FontSize="20" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>


        <Button x:Name="BtnThoat" Height="50" Click="BtnThoat_Click" Margin="181,229,42,0" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Image/thoat.png" Width="24" Height="24" Margin="0,0,8,0"/>
                <TextBlock Text="Thoát" FontSize="20"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>
