<Window x:Class="RadioButtonControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioButtonControl"
        mc:Ignorable="d"
        Title="RadioButton Control" Height="400" Width="500">
    <Grid>
        <Label Content="Bạn thấy hệ thống này thế nào?" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <RadioButton x:Name="radRatTot" Content="Rất tốt" GroupName="DanhGia" HorizontalAlignment="Left" Margin="18,47,0,0" VerticalAlignment="Top" FontSize="20"/>
        <RadioButton x:Name="radTot" Content="Tốt" GroupName="DanhGia" HorizontalAlignment="Left" Margin="18,78,0,0" VerticalAlignment="Top" FontSize="20"/>
        <RadioButton x:Name="radTamDuoc" Content="Tạm được" GroupName="DanhGia" HorizontalAlignment="Left" Margin="17,109,0,0" VerticalAlignment="Top" FontSize="20"/>
        <RadioButton x:Name="radKhongTot" Content="Không tốt" GroupName="DanhGia" HorizontalAlignment="Left" Margin="17,140,0,0" VerticalAlignment="Top" FontSize="20"/>

        <Label Content="Giới tính của bạn là gì?" HorizontalAlignment="Left" Margin="10,171,0,0" VerticalAlignment="Top" FontSize="20"/>
        <RadioButton x:Name="radNam" Content="Nam" GroupName="GioiTinh" HorizontalAlignment="Left" Margin="20,213,0,0" VerticalAlignment="Top" FontSize="20"/>
        <RadioButton x:Name="radNu" Content="Nữ" GroupName="GioiTinh" HorizontalAlignment="Left" Margin="20,244,0,0" VerticalAlignment="Top" FontSize="20"/>

        <Label Content="Chọn tác vụ:" HorizontalAlignment="Left" Margin="10,270,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="btnGui" Content="Gửi phản hồi" HorizontalAlignment="Left" Margin="21,307,0,0" VerticalAlignment="Top" FontSize="20" Click="btnGui_Click"/>
        <Button x:Name="btnHuy" Content="Hủy" HorizontalAlignment="Left" Margin="178,307,0,0" VerticalAlignment="Top" FontSize="20" Width="138" Click="btnHuy_Click"/>
    </Grid>
</Window>
