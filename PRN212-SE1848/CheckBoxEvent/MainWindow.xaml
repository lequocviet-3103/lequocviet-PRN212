<Window x:Class="CheckBoxEvent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBoxEvent"
        mc:Ignorable="d"
        Title="CheckBox Sự Kiện" Height="250" Width="350">
    <Grid>
        <Label Content="Bạn thích những gì?" HorizontalAlignment="Left" Margin="12,23,0,0" VerticalAlignment="Top" FontSize="20"/>
        <CheckBox x:Name="ChkToanBo" Content="Thích toàn bộ hoạt động" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" IsChecked="False" Checked="ChkToanBo_Checked" Unchecked="ChkToanBo_Unchecked" FontSize="20"/>
        <CheckBox x:Name="ChkCongNghe" Content="Thích nghiên cứu công nghệ" HorizontalAlignment="Left" Margin="29,96,0,0" VerticalAlignment="Top" FontSize="20" Checked="ChkSub_CheckedChanged"  Unchecked="ChkSub_CheckedChanged"/>
        <CheckBox x:Name="ChkDuLich" Content="Thích đi du lịch" HorizontalAlignment="Left" Margin="29,127,0,0" VerticalAlignment="Top" FontSize="20" Checked="ChkSub_CheckedChanged"  Unchecked="ChkSub_CheckedChanged"/>
        <CheckBox x:Name="ChkDaBong" Content="Thích bóng đá" HorizontalAlignment="Left" Margin="29,158,0,0" VerticalAlignment="Top" FontSize="20" Checked="ChkSub_CheckedChanged"  Unchecked="ChkSub_CheckedChanged"/>
        <CheckBox x:Name="ChkXemPhim" Content="Thích xem phim" HorizontalAlignment="Left" Margin="29,189,0,0" VerticalAlignment="Top" FontSize="20" Checked="ChkSub_CheckedChanged"  Unchecked="ChkSub_CheckedChanged"/>

    </Grid>
</Window>
