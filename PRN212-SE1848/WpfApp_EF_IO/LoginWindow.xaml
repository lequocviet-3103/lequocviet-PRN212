<Window x:Class="WpfApp_EF_IO.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_EF_IO"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="450" Width="800">
    <Grid>
        <Label Content="Đăng nhập hệ thống" HorizontalAlignment="Left" Height="43" Margin="330,41,0,0" VerticalAlignment="Top" Width="222" FontWeight="Bold"/>
        <Label Content="User Name" HorizontalAlignment="Left" Height="35" Margin="52,127,0,0" VerticalAlignment="Top" Width="117" FontSize="20"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="35" Margin="52,217,0,0" VerticalAlignment="Top" Width="117" FontSize="20"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="37" Margin="197,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="487" FontSize="18"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="35" Margin="197,217,0,0" VerticalAlignment="Top" Width="487" FontSize="18"/>
        <Button x:Name="btnDangNhap" Content="Đăng nhập" HorizontalAlignment="Left" Height="50" Margin="197,316,0,0" VerticalAlignment="Top" Width="123" FontSize="20" Click="btnDangNhap_Click"/>
        <Button x:Name="btnExit" Content="Thoát" HorizontalAlignment="Left" Height="50" Margin="561,316,0,0" VerticalAlignment="Top" Width="123" FontSize="20" Click="btnExit_Click"/>
        <CheckBox x:Name="SaveLogin" Content="Lưu thông tin đăng nhập" HorizontalAlignment="Left" Height="25" Margin="197,273,0,0" VerticalAlignment="Top" Width="219" FontSize="16"/>

    </Grid>
</Window>
