<Window x:Class="WpfApp_EF_IO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_EF_IO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Name="MenuHeThong" Header="Hệ Thống">
                <MenuItem Name="menuHeThongDoiMatKhau" Header="Đổi mật khẩu"></MenuItem>
                <MenuItem Name="menuHeThongXemTaiKhoan" Header="Xem tài khoản"></MenuItem>
                <Separator/>
                <MenuItem Name="menuHeThongThoat" Header="Thoát"></MenuItem>
                
            </MenuItem>
            <MenuItem Name="mnuQuanLy" Header="QUản lý">
                <MenuItem Name="menuQuanLyTaiKhoan" Header="quản lý tài khoản" ></MenuItem>
                <MenuItem Name="menuQuanLyDanhMuc" Header="Quản lí danh mục" ></MenuItem>
                <MenuItem Name="menuQuanLySanPham" Header="quản lý sản phẩm" ></MenuItem>
            </MenuItem>
            <MenuItem Name="mnuBaoCao" Header="Báo cáo">
                <MenuItem Name="menuBaoCaoDoanhThu" Header="Báo Cáo Doanh thu"></MenuItem>
                <MenuItem Name="menuBaoCaoTonKho" Header="Báo Cáo Tồn Kho"></MenuItem> "
            </MenuItem>
            <MenuItem Name="mnuTroGiup" Header="Trợ Giúp">
                <MenuItem Name="mnuTroGiupHDSD" Header="Hướng dẫn sử dụng"></MenuItem> "
                <Separator/>
                <MenuItem Name="mnuTroGiupGioiThieu" Header="Trợ giúp giới thiệu phần mềm"></MenuItem>
            </MenuItem>
        </Menu>
        <WrapPanel DockPanel.Dock="Top" Height="50" Background="Yellow">
            
        </WrapPanel>
        <WrapPanel DockPanel.Dock="Bottom" Height="50" Background="Magenta">
            <Label x:Name="nameLogin" FontSize="20"></Label>
        </WrapPanel>
        <DockPanel>
            
        </DockPanel>
    </DockPanel>
</Window>
