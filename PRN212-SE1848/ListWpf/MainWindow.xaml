<Window x:Class="ListWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListWpf"
        mc:Ignorable="d"
        Title="Thao tác trên List" Height="450" Width="420">
    <Grid>
        <TextBox x:Name="txtGiaTri" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <Button x:Name="btnThem" Content="Thêm vào List" HorizontalAlignment="Left" Margin="163,10,0,0" VerticalAlignment="Top" FontSize="20" Width="192" Click="btnThem_Click"/>
        <TextBox x:Name="txtGiaTriChen" HorizontalAlignment="Left" Margin="235,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <TextBox x:Name="txtViTriChen" HorizontalAlignment="Left" Margin="235,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <Button x:Name="BtnChen" Content="Chèn" HorizontalAlignment="Left" Margin="235,129,0,0" VerticalAlignment="Top" FontSize="20" Width="120" Click="BtnChen_Click"/>
        <Button x:Name="btnSapXepTang" Content="Sắp xếp tăng" HorizontalAlignment="Left" Margin="163,171,0,0" VerticalAlignment="Top" FontSize="20" Width="191" Click="btnSapXepTang_Click"/>
        <Button x:Name="btnSapXepGiam" Content="Sắp xếp giảm" HorizontalAlignment="Left" Margin="163,216,0,0" VerticalAlignment="Top" FontSize="20" Width="191" Click="btnSapXepGiam_Click"/>
        <Button x:Name="btnXoa1PhanTu" Content="Xóa 1 phần tử" HorizontalAlignment="Left" Margin="163,264,0,0" VerticalAlignment="Top" FontSize="20" Width="191" Click="btnXoa1PhanTu_Click"/>
        <Button x:Name="btnXoaNhieuPhanTu" Content="Xóa nhiều phần tử" HorizontalAlignment="Left" Margin="163,313,0,0" VerticalAlignment="Top" FontSize="20" Width="191" Click="btnXoaNhieuPhanTu_Click"/>
        <Button x:Name="btnXoaToanBoPhanTu" Content="Xóa toàn bộ phần tử" HorizontalAlignment="Left" Margin="168,364,0,0" VerticalAlignment="Top" FontSize="20" Click="btnXoaToanBoPhanTu_Click"/>
        <Label Content="Giá trị:" HorizontalAlignment="Left" Margin="163,46,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Vị trí:" HorizontalAlignment="Left" Margin="169,83,0,0" VerticalAlignment="Top" FontSize="20"/>
        <ListBox x:Name="lstDuLieu" SelectionMode="Multiple" HorizontalAlignment="Left" Height="345" Margin="10,50,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
