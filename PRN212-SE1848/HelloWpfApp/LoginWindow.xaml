<Window x:Class="HelloWpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpfApp"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,3,0,-3" Background="#FF72F6FA">
        <Label Content="Đăng nhập hệ thống quản trị" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" FontSize="20" Background="#FF78ED2C" Foreground="Black" FontFamily="Cooper Black" Width="308"/>
        <Label Content="_Username: " 
               Target="{Binding ElementName=txtUserName}"
               HorizontalAlignment="Left" Margin="198,135,0,0" VerticalAlignment="Top" FontSize="20" Background="#FFFFF968" FontFamily="Arial Black"/>

        <Label Content="_Password:" 
               Target="{Binding ElementName=txtPassword}"
               HorizontalAlignment="Left" Margin="198,0,0,0" VerticalAlignment="Center" FontSize="20" RenderTransformOrigin="0.457,1.003" Background="#FFFFFD42" FontFamily="Segoe UI Black" Width="133"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="347,0,0,0" VerticalAlignment="Center" Width="271" FontSize="20" Height="36"/>
        <Button x:Name="btnDangNhap" Content="Đăng nhập" HorizontalAlignment="Left" Margin="266,274,0,0" VerticalAlignment="Top" FontSize="20" Background="#FFFF4DC0" Height="41" Width="111" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Thoát" HorizontalAlignment="Left" Margin="456,274,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.284,-0.756" Background="#FFFF33B8" Height="41" Width="111" Click="btnThoat_Click"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="347,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="271" Height="33" FontSize="20" FontFamily="Arial Black"/>

    </Grid>
</Window>
